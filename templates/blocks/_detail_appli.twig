<div class="col-md-4 divappli {% if not MYAPPLI.installed %}div-uninstalled {% endif %}" id="div-{{ MYAPPLI.display_name }}" data-appli="{{ MYAPPLI.display_name }}" data-installed="{% if MYAPPLI.installed %}1{% else %}0{% endif %}">
<div class="post">
    <div class="card card-info card-outline">
        <div class="card-body user-block">
            <img class="img-circle img-bordered-sm" id="logo-{{ MYAPPLI.display_name }}" alt="{{ MYAPPLI.display_name }}">
            {% if MYAPPLI.public_url != false%}<a href="https://{{ MYAPPLI.public_url }}" target="_blank">{% else %}<a>{%  endif %}
                <span class="username" id="nomAppli-{{ MYAPPLI.display_name }}">{{ MYAPPLI.display_name|capitalize  }}</span>
                </a>
            <span class="description" id="version-{{ MYAPPLI.display_name }}"></span>
        </div>
        <div class="card-footer" id="toto">
            <a class="link-black start-stop-button-{{ MYAPPLI.display_name }} text-sm mr-2 bouton-start" data-appli="{{ MYAPPLI.display_name }}" id="reset-{{ MYAPPLI.display_name }}" style="{% if not MYAPPLI.installed %}display: none;{% endif %}cursor: pointer;">
                
                <i id="i_bouton_status_{{ MYAPPLI.display_name }}" class="fas {% if MYAPPLI.running %}fa-redo-alt{% else %}fa-play-circle{% endif %}"></i>
               
        
                    <span id="texte-bouton-restart-{{ MYAPPLI.display_name }}">
                        {% if MYAPPLI.running %}Redémarrer{% else %}Démarrer{% endif %}
                    </span>
            </a>
            <a class="link-black start-stop-button-{{ MYAPPLI.display_name }} text-sm mr-2 bouton-stop" data-appli="{{ MYAPPLI.display_name }}" id="stop-{{ MYAPPLI.display_name }}" style="cursor: pointer;">
                <i class="fas fa-stop-circle"></i> stop
            </a>
            <span class="float-right">
                <!-- Notes j'ai deporté la classe bouton-install dans le button modal et remplacé par une classe affichage-modal que j'ai declaré dasn le fichier js, j'ai mis le modal dans header.wig -->
                <button type="submit" name="{{ MYAPPLI.display_name }}" id="status-{{ MYAPPLI.display_name }}" class="btn btn-block btn-warning btn-sm text-with affichage-modal" data-appli="{{ MYAPPLI.display_name }}">
                </button>
            </span>
        </div>
    </div>
</div></div>